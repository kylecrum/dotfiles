# enable colored output from ls, etc
export CLICOLOR=1
export LSCOLORS="Exfxcxdxbxegedabagacad"

# load
export PATH="/opt/homebrew/bin:/opt/homebrew/opt:/Applications/Visual Studio Code.app/Contents/Resources/app/bin:$HOME/.rbenv/bin:node_modules/.bin:/usr/local/bin:/usr/local/sbin:$HOME/.rbenv/shims:/Users/kyle/.local/bin:$PATH:node_modules/.bin"
export EDITOR="vim"
export CDPATH=".:$HOME/dev/"

# GO
export GOPATH="$HOME/dev/go"
export PATH="$GOPATH/bin:$PATH"

# GNU Binaries (i.e. sed)
PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

# prompt
export PS1="[\w]\[$Green\]\$(vcprompt -f '[%b%u%m]')\[$Color_Off\] ðŸ‘‰  "

# bundler editor
export BUNDLER_EDITOR="code"

#vscode command line
export PATH="/Applications/Visual Studio Code.app/Contents/Resources/app/bin:$PATH"

# mac specific things
export BASH_SILENCE_DEPRECATION_WARNING=1

# Java
export JAVA_HOME="/Applications/Android Studio.app/Contents/jbr/Contents/Home"

# charlock homes gem
PKG_CONFIG_PATH="/opt/homebrew/opt/icu4c@74/lib/pkgconfig"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - bash)"

export TARGETARCH="$(uname -m)"

